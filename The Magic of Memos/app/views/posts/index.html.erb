<div class="main posts-index">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-left">
          <img src="<%= "/user_images/#{post.user.image_name}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(post.user.name, "/users/#{post.user.id}") %>
          </div>
          <div class="post-content-a">
            <div class="post-fact" >
              <span class="box-title">ファクト</span>
              <p><%= link_to(post.content, "/posts/#{post.id}") %></p>
            </div>
            <div class="post-abstract">
              <span class="box-title">抽象化</span>
              <p><%= link_to(post.content_2, "/posts/#{post.id}") %></p>
            </div>
            <div class="post-diversion">
              <span class="box-title">転用</span>
              <p><%= link_to(post.content_3, "/posts/#{post.id}") %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>