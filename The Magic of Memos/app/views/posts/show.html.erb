<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <div class="post-user-name">
        <img src="<%= "/user_images/#{@user.image_name}" %>">
        <%= link_to(@user.name, "/users/#{@user.id}") %>
      </div>
      <div class="post-fact">
        <span class="box-title">ファクト</span>
        <p><%= @post.content %></p>
      </div>
      <div class="post-abstract">
        <span class="box-title">抽象化</span>
        <p><%= @post.content_2 %></p>
      </div>
      <div class="post-diversion">
        <span class="box-title">転用</span>
        <p><%= @post.content_3 %></p>
      </div>
      
      <div class="post-time">
        <%= @post.created_at.strftime("%Y-%m-%d %H:%M") %>
      </div>
      <% if Like.find_by(user_id: @current_user.id, post_id: @post.id) %>
        <%= link_to("/likes/#{@post.id}/destroy", {method: "post"}) do %>
          <span class="fa fa-heart like-btn-unlike"></span>
        <% end %>
      <% else %>
        <%= link_to("/likes/#{@post.id}/create", {method: "post"}) do %>
          <span class="fa fa-heart like-btn"></span>
        <% end %>
      <% end %>
      <%= @likes_count %>
      <% if @post.user_id == @current_user.id %>
        <div class="post-menus">
          <div class="post-menu-0"><%= link_to("投稿一覧", "/posts/index") %></div>
          <div class="post-menu-1"><%= link_to("編集", "/posts/#{@post.id}/edit") %></div>
          <div class="post-menu-2"><%= link_to("削除", "/posts/#{@post.id}/destroy", {method: "post"}) %></div>
        </div>
      <% else %>
        <div class="post-menus">
          <div class="post-menu-0"><%= link_to("投稿一覧", "/posts/index") %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>